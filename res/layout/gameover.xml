<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GAME OVER"
        android:id="@+id/gameover"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.30"
        android:textSize="46dp"
        android:textColor="#ff0000"
        android:textStyle="bold" android:gravity="center_vertical|center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:id="@+id/totalScore" android:layout_gravity="center_horizontal" android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal" android:textSize="20dp" android:textColor="#ff000000"
        android:textStyle="bold" android:background="#789494af" android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reached level : 0"
        android:id="@+id/reachedLevel" android:layout_gravity="center_horizontal" android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal" android:textSize="20dp" android:textColor="#ff000000"
        android:textStyle="bold" android:background="#789494af" android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total killed monsters : 0"
        android:id="@+id/killedMonsters" android:layout_gravity="center_horizontal" android:layout_weight="0.10"
        android:gravity="center_vertical|center_horizontal" android:textSize="20dp" android:textColor="#ff000000"
        android:textStyle="bold" android:background="#789494af"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/btnRestart" android:layout_gravity="center_horizontal" android:layout_weight="0.10"
        android:textSize="36dp" android:textColor="#ff0000"
        android:textStyle="bold" android:layout_marginBottom="4dp" android:background="@android:color/transparent"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="220dp" android:layout_height="wrap_content"
            android:text="MAIN MENU" android:id="@+id/btnHome" android:layout_gravity="center_horizontal"
            android:layout_weight="0.10" android:textSize="36dp" android:textColor="#ff0000"
            android:background="@android:color/transparent" android:textStyle="bold"/>
    <Button style="?android:attr/buttonStyleSmall" android:layout_width="220dp" android:layout_height="wrap_content"
            android:text="EXIT" android:id="@+id/btnExit" android:layout_gravity="center_horizontal"
            android:layout_weight="0.10" android:textSize="36dp" android:textColor="#ff0000"
            android:background="@android:color/transparent" android:textStyle="bold"/>
</LinearLayout>
